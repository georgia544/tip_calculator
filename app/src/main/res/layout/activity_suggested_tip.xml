<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_theme"
        android:layout_width="54dp"
        android:layout_height="34dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/total_bill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill: $"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/switch_theme"
        android:layout_marginStart="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tip20"
        />

    <TextView
        android:id="@+id/tip_20_percent_textview"
        tools:text="1455"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@id/total_bill_text"
        app:layout_constraintTop_toTopOf="@id/total_bill_text"
        app:layout_constraintBottom_toBottomOf="@id/total_bill_text"
        />


    <TextView
        android:id="@+id/tip20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 20% tip would be"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintBottom_toTopOf="@id/total_bill_text"
        app:layout_constraintStart_toStartOf="@id/total_bill_text"
        app:layout_constraintTop_toBottomOf="@id/total_bill_text2"
        />

    <TextView
        android:id="@+id/total_bill_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill: $"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/tip20"
        app:layout_constraintStart_toStartOf="@id/tip20"
        app:layout_constraintTop_toBottomOf="@id/tip18"
        />

    <TextView
        android:id="@+id/tip_18_percent_textview"
        tools:text="1271"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@id/total_bill_text2"
        app:layout_constraintBottom_toBottomOf="@id/total_bill_text2"
        app:layout_constraintTop_toTopOf="@id/total_bill_text2"
        />

    <TextView
        android:id="@+id/tip18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 18% tip would be"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="@id/total_bill_text2"
        app:layout_constraintBottom_toTopOf="@id/total_bill_text2"
        app:layout_constraintTop_toBottomOf="@id/total_bill_text3"
        />

    <TextView
        android:id="@+id/total_bill_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill: $"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/tip18"
        app:layout_constraintStart_toStartOf="@id/tip18"
        app:layout_constraintTop_toBottomOf="@id/tip15"
        />

    <TextView
        android:id="@+id/tip_15_percent_textview"
        tools:text="1094"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@id/total_bill_text3"
        app:layout_constraintBottom_toBottomOf="@id/total_bill_text3"
        app:layout_constraintTop_toTopOf="@id/total_bill_text3"
        />

    <TextView
        android:id="@+id/tip15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 15% tip would be"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="@id/total_bill_text3"
        app:layout_constraintBottom_toTopOf="@id/total_bill_text3"
        app:layout_constraintTop_toBottomOf="@id/total_bill_text4"
        />

    <TextView
        android:id="@+id/total_bill_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill: $"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/tip15"
        app:layout_constraintStart_toStartOf="@id/tip15"
        app:layout_constraintTop_toBottomOf="@id/tip10"
        />

    <TextView
        android:id="@+id/tip_10_percent_textview"
        tools:text="928"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@id/total_bill_text4"
        app:layout_constraintBottom_toBottomOf="@id/total_bill_text4"
        app:layout_constraintTop_toTopOf="@id/total_bill_text4"
        />

    <TextView
        android:id="@+id/tip10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A 10% tip would be"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="@id/total_bill_text4"
        app:layout_constraintBottom_toTopOf="@id/total_bill_text4"
        app:layout_constraintTop_toBottomOf="@id/equals_suggested_tip"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:text="="
        android:id="@+id/equals_suggested_tip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/oval_button_violet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:inputType="numberDecimal"
        android:id="@+id/bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="44dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/equals_suggested_tip"
        android:layout_marginBottom="66dp"
        />

    <TextView
        android:id="@+id/bill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:text="Bill ($) :"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toTopOf="@+id/bill"
        android:layout_marginBottom="19dp"
        app:layout_constraintStart_toStartOf="@id/bill"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested Tip"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bill"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@id/bill"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>

